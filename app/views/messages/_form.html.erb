<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="InputName">名前</label>
    <%= f.text_field :name, class: "form-control", id: "InputName" %>
  </div>
  <div class="form-group">
    <label for="InputAge">年齢</label>
    <%= f.text_field :age, class: "form-control", id: "InputAge" %>
  </div>
  <div class="form-group">
    <label for="InputBody">内容</label>
    <%= f.text_area :body, class: "form-control", id: "InputBody" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>